{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "speak": "The Seattle Seahawks beat the Carolina Panthers 40-7",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "1",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${img}",
                                    "size": "auto"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${title}",
                                    "horizontalAlignment": "Center",
                                    "weight": "Bolder",
                                    "wrap": true
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "1",
                            "separator": true,
                            "spacing": "Medium",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": ""
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${time}",
                                    "horizontalAlignment": "center",
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "---------->",
                                    "size": "ExtraLarge",
                                    "horizontalAlignment": "center",
                                    "wrap": true
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "1",
                            "separator": true,
                            "spacing": "Medium",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${img}",
                                    "size": "auto",
                                    "horizontalAlignment": "center"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${title}",
                                    "horizontalAlignment": "center",
                                    "weight": "Bolder",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}